#include "p24FJ128GA010.h"

volatile unsigned int program = 0;
volatile unsigned char bitCounter = 0x0;

void __attribute__((interrupt)) _CNInterrupt(void)
{
    for (volatile int i = 0; i < 10000; i++);
    bitCounter = 0x0;
    LATA=0;
    if (PORTDbits.RD6 == 0) {
        program = (program + 1) % 9;
        // Simple debounce delay (optional)
        for (volatile int i = 0; i < 10000; i++);
    } 
    else if (PORTDbits.RD13 == 0) {
        if (program == 0)
            program = 8;
        else
            program = program - 1;
        for (volatile int i = 0; i < 10000; i++);
    }

    IFS1bits.CNIF = 0; // Clear CN interrupt flag
}

int main() {
    LATA = 0;
    TRISA = 0;
    TRISDbits.TRISD6 = 1;
    TRISDbits.TRISD13 = 1;
    CNEN1bits.CN15IE = 1;  // Enable CN15 (RD6)
    CNEN2bits.CN19IE = 1;  // Enable CN19 (RD13)
    IEC1bits.CNIE = 1;     // Enable CN interrupts
    IFS1bits.CNIF = 0;     // Clear CN interrupt flag
    unsigned int jedn;
    unsigned int dzies;
    unsigned int wynik;
    
    while (1) {
        switch(program) {
            case 0:
                for(unsigned int i = 0x0000; i<=0x00FF;i++)
                {
                    LATA=i;
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 1:
                for(unsigned int i = 0x00FF; i>=0x0000;i--)
                {
                    LATA=i;
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 2:
                for(unsigned int i = 0x0000; i<=0x00FF;i++)
                {
                    LATA=i ^ (i >> 1);
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 3:
                for(unsigned int i = 0x00FF; i>=0x0000;i--)
                {
                    LATA=i ^ (i >> 1);
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 4:
                jedn = 0;
                dzies = 0;
                for (unsigned int i = 0; i<100;i++){
                    jedn=i%10;
                    dzies=i/10;
                    wynik=(dzies*16)+jedn;
                    LATA=wynik;
                    for(unsigned j = 0; j<65000;j++);
                }
                    
                break;
            case 5:
                jedn = 9;
                dzies = 9;
                for (unsigned int i = 99; i>=0;i--){
                    jedn=i%10;
                    dzies=i/10;
                    wynik=(dzies*16)+jedn;
                    LATA=wynik;
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 6:
                wynik=7;
                LATA=wynik;
                for (unsigned int i = 0; i<5;i++){
                    wynik=wynik<<1;
                    LATA=wynik;
                    for(unsigned j = 0; j<65000;j++);
                }
                for (unsigned int i = 0; i<5;i++){
                    wynik=wynik>>1;
                    LATA=wynik;
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 7:
                LATA=65;
                break;
            case 8:
                LATA=81;
                break;
            default:
                LATA=255;
                break;
        
        }
    }

    return 0;
}
