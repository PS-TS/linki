#include "p24FJ128GA010.h"
/*
 * 
 */
int main() {
    LATA = 0;
    TRISA = 0;
    TRISDbits.TRISD6 = 1;
    TRISDbits.TRISD13 = 1;
    unsigned int program = 3;
    while (1) {
        if (PORTDbits.RD6 == 0) {
            program=(program+1)%9;
            while(PORTDbits.RD6 == 0);
        }    
        if (PORTDbits.RD13 == 0) {
            if(program == 0)
                program = 8;
            else
                program=(program-1);
            while(PORTDbits.RD13 == 0); 
        }
        
        switch(program) {
            case 0:
                for(unsigned int i = 0x0000; i<=0x00FF;i++)
                {
                    LATA=i;
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 1:
                for(unsigned int i = 0x00FF; i>=0x0000;i--)
                {
                    LATA=i;
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 2:
                for(unsigned int i = 0x0000; i<=0x00FF;i++)
                {
                    LATA=i ^ (i >> 1);
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 3:
                for(unsigned int i = 0x00FF; i>=0x0000;i--)
                {
                    LATA=i ^ (i >> 1);
                    for(unsigned j = 0; j<65000;j++);
                }
                break;
            case 4:
                LATA=31;
                break;
            case 5:
                LATA=63;
                break;
            case 6:
                LATA=127;
                break;
            case 7:
                LATA=65;
                break;
            case 8:
                LATA=81;
                break;
            default:
                LATA=255;
                break;
        
        }
    }

    return 0;
}

